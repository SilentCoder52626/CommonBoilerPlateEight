@model CelebrityScheduleUpdateViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["CelebritySchedule"];
    ViewBag.ModuleIcon = "anchor";
}

<div class="row card">
    <div class="col-md-12 card-body">
        <form asp-action="Edit" asp-controller="CelebritySchedule" method="post" id="Form-Schedule">
            <div class="row">
                <input asp-for="Id" type="hidden" />
                <div class="mt-3">
                    <div>
                     
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["Date"]</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="text" asp-for="Date" class="form-control datetime-picker" placeholder="@_CommonLocalizer["Select"]" value="@Model.Date.ToString("yyyy-MM-dd")" data-type="date" data-show="future">
                                    <span class="input-group-text input-group-addon" data-toggle><i data-feather="calendar"></i></span>
                                </div>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["FromTime"]</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="FromTime" class="form-control datetime-picker" placeholder="@_CommonLocalizer["Select"]" data-type="time">
                                <span asp-validation-for="FromTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["ToTime"]</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="ToTime" class="form-control datetime-picker" placeholder="@_CommonLocalizer["Select"]" data-type="time">
                                <span asp-validation-for="ToTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary" id="btn-save">@_CommonLocalizer["SaveBtn"]</button> &nbsp;
                <a asp-controller="CelebritySchedule" asp-action="Index" class="btn btn-secondary">@_CommonLocalizer["CancelBtn"]</a>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    <script src="~/js/Custom/CelebritySchedule.js" asp-append-version="true"></script>
}
