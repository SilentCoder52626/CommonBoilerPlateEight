@model CelebrityScheduleCreateViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["CelebritySchedule"];
    ViewBag.ModuleIcon = "anchor";
    var celebrities = ViewBag.Celebrities as List<DropdownDto> ?? new List<DropdownDto>();
}


<div class="row card">
    <div class="col-md-12 card-body">
        <form asp-action="Create" asp-controller="CelebritySchedule" method="post" id="Form-Schedule">
            <div class="row">
                <div class="mt-3">
                    <div>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["Celebrity"]</label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(a => a.CelebrityId, new SelectList(celebrities, "Id", "Name"), _CommonLocalizer["Select"], new { @class = "form-control" })
                                <span asp-validation-for="CelebrityId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["Date"]</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="text" asp-for="Date" class="form-control datetime-picker" placeholder="@_CommonLocalizer["Date"]" data-input data-type="date" data-show="future">
                                    <span class="input-group-text input-group-addon" data-toggle><i data-feather="calendar"></i></span>
                                </div>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["FromTime"]</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="FromTime" class="form-control datetime-picker" placeholder="@_CommonLocalizer["FromTime"]" data-input data-type="time">
                                <span asp-validation-for="FromTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">@_CommonLocalizer["ToTime"]</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="ToTime" class="form-control datetime-picker" placeholder="@_CommonLocalizer["ToTime"]" data-input data-type="time">
                                <span asp-validation-for="ToTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary" id="btn-save">@_CommonLocalizer["SaveBtn"]</button>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    <script src="~/js/Custom/CelebritySchedule.js" asp-append-version="true"></script>
}
